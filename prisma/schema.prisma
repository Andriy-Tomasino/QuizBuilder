generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
}

model Quiz {
  id        Int        @id @default(autoincrement())
  title     String
  questions Question[]
  createdAt DateTime   @default(now())
}

model Question {
  id      Int           @id @default(autoincrement())
  quizId  Int
  quiz    Quiz          @relation(fields: [quizId], references: [id], onDelete: Cascade)
  type    QuestionType
  text    String
  options Json?
  answer  Json?
}

enum QuestionType {
  BOOLEAN
  INPUT
  CHECKBOX
}
